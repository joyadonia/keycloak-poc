@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Keycloak.Poc</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
	<nav class="flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="/yams/" Match="NavLinkMatch.All">
				<span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
			</NavLink>
		</div>
		<CascadingAuthenticationState>
			<AuthorizeView Roles="install, all">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="Install">
						<span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Install
					</NavLink>
				</div>
			</AuthorizeView>
		</CascadingAuthenticationState>
		<CascadingAuthenticationState>
			<AuthorizeView Roles="licence, all">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="Licence">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Licence
					</NavLink>
				</div>
			</AuthorizeView>
		</CascadingAuthenticationState>
		<CascadingAuthenticationState>
			<AuthorizeView Roles="info, all">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="Info">
						<span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Info
					</NavLink>
				</div>
			</AuthorizeView>
		</CascadingAuthenticationState>
	</nav>
</div>

